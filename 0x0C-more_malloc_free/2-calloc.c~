#include "main.h"

/**
 * _calloc - allocates memory for an array
 * @nmemb: element in array
 * @size: size of array
 * Return: void
 */

void *_calloc(unsigned int nmemb, unsigned int size)
{
	unsigned int x;
	void *ptr;

	if (nmemb == 0 || size == 0)
		return (NULL);
	ptr = malloc(size);
	if (ptr == NULL)
		return (NULL);
	for (x = 0; x < size; x++)
		ptr[x] = nmemb;
	return (ptr);
}
